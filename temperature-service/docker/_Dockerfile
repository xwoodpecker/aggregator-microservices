#
# Build stage
#
FROM maven AS build

COPY ./aggregator-lib/src /app/lib
COPY ./aggregator-lib/pom.xml /app/lib
RUN mvn -f /app/lib/pom.xml clean install -DskipTests
COPY ./temperature-service/src /app/svc
COPY ./temperature-service/pom.xml /app/svc
RUN mvn -f /app/svc/pom.xml clean install -DskipTests

#
# Package stage
#
FROM openjdk:14-alpine AS prod
COPY --from=build /app/svc/target/*.jar /usr/local/lib/app.jar
EXPOSE 8080
ENTRYPOINT ["java","-jar","/usr/local/lib/app.jar"]